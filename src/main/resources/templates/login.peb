<!DOCTYPE html>
<html lang="es">
{% include "fragments/head" %}

<body class="d-flex flex-column min-vh-100">
{% include "fragments/navbar" %}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <!-- Login Form -->
        <div id="loginbox" class="col-md-6 mt-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> {{ i18n('auth.login') }}</h4>
                </div>
                <div class="card-body">
                    <form id="loginform" method="POST" action="/auth/login-post">
                        <div class="mb-3">
                            <label for="username" class="form-label">{{ i18n('auth.email') }}</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control" id="login-username" name="username" placeholder="{{ i18n('auth.email') }}" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">{{ i18n('auth.password') }}</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="password" class="form-control" id="login-password" name="password" placeholder="{{ i18n('auth.password') }}" required>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">{{ i18n('auth.login') }}</button>
                        </div>
                        
                        <div class="mt-3 pt-3 border-top">
                            <p class="text-center">
                                <a href="#" onclick="document.getElementById('loginbox').style.display='none'; document.getElementById('signupbox').style.display='block'; return false;">
                                    {{ i18n('auth.register') }}
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Registration Form -->
        <div id="signupbox" class="col-md-6 mt-5" style="display: none;">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> {{ i18n('auth.register') }}</h4>
                </div>
                <div class="card-body">
                    <form id="signupform" method="POST" action="/auth/register" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="email" class="form-label">{{ i18n('user.email') }}</label>
                            <input type="email" class="form-control" name="email" placeholder="{{ i18n('user.email') }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="nombre" class="form-label">{{ i18n('user.name') }}</label>
                            <input type="text" class="form-control" name="nombre" placeholder="{{ i18n('user.name') }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="apellidos" class="form-label">{{ i18n('user.surname') }}</label>
                            <input type="text" class="form-control" name="apellidos" placeholder="{{ i18n('user.surname') }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">{{ i18n('user.password') }}</label>
                            <input type="password" class="form-control" name="password" placeholder="{{ i18n('user.password') }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="file" class="form-label">{{ i18n('user.avatar') }}</label>
                            <input type="file" class="form-control" name="file">
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info">{{ i18n('auth.register') }}</button>
                            <a href="#" onclick="document.getElementById('signupbox').style.display='none'; document.getElementById('loginbox').style.display='block'; return false;" class="btn btn-secondary">
                                {{ i18n('btn.cancel') }}
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% include "fragments/footer" %}

<!-- Bootstrap 5.3 JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
