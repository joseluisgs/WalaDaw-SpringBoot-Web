<!DOCTYPE html>
<html lang="es">
{% include "fragments/head.peb" %}
<body>
{% include "fragments/navbar.peb" %}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-box-seam"></i> Gestión de {{ i18n('nav.products') }}
            </h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>{{ i18n('product.image') }}</th>
                            <th>{{ i18n('product.name') }}</th>
                            <th>{{ i18n('product.price') }}</th>
                            <th>{{ i18n('product.category') }}</th>
                            <th>{{ i18n('product.owner') }}</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for producto in productos %}
                        <tr>
                            <td>{{ producto.id }}</td>
                            <td>
                                {% if producto.imagen %}
                                <img src="{{ producto.imagen }}" alt="{{ producto.nombre }}" 
                                     style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                {% else %}
                                <i class="bi bi-image" style="font-size: 2rem;"></i>
                                {% endif %}
                            </td>
                            <td>{{ producto.nombre }}</td>
                            <td><strong>{{ producto.precio }}€</strong></td>
                            <td><span class="badge bg-secondary">{{ producto.categoria }}</span></td>
                            <td>{{ producto.propietario.nombre }}</td>
                            <td>
                                {% if producto.compra %}
                                <span class="badge bg-success">Vendido</span>
                                {% else %}
                                <span class="badge bg-warning">Disponible</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% include "fragments/footer.peb" %}

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
